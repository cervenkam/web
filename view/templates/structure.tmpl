<!DOCTYPE html>
<html>
	<head>
		<title>Title</title>
		<meta charset="utf-8" />
		<script src="http://code.jquery.com/jquery-latest.js"></script>
		<script src="controller/js/ajax_content.js"></script>
		<script src="view/bootstrap/js/bootstrap.min.js"></script>
		<link rel="stylesheet" media="screen" href="view/bootstrap/css/bootstrap.min.css" />
		<link rel="stylesheet" media="screen" href="view/style.css" />
	</head>
	<body>
		<div id="header" class="container-fluid">
			<a class="ajax_content" href="index" data-href="index" data-target="#content">
				<h1>Webov&aacute; konference</h1>
			</a>
		</div>
		<div id="login">
			{% include 'log.tmpl' %}
		</div>
		<div class="container-fluid" id="side_menu">
			<nav class="navbar navbar-inverse">
				<div class="navbar-header">
					<a class="navbar-brand ajax_content" href="index" data-href="index" data-target="#content">Konference</a>
				</div>
				<ul class="nav navbar-nav">
					<li>
						<a class="ajax_content" href="about" data-href="about" data-target="#content">O konferenci</a>
					</li>
					{% for key,value in privileges[session.user_name] %}
						{% if value %}
							<li><a class="ajax_content" href="privilege_{{ key }}"
								data-href="privilege_{{ key }}" data-target="#content">
								{{ value.name|capitalize }}</a></li>
						{% endif %}
					{% endfor %}
				</ul>
			</nav>
		</div>
		<div class="container-fluid" id="content">
			{% include page ~ '.tmpl' %}
		</div>
		<!-- TODO remove following div -->
		<div id="debug_div">
		</div>
	</body>
</html>
